@model IEnumerable< Academia.Models.Exercicio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QdtSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QdtRepeticoes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tempo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aparelho)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QdtSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QdtRepeticoes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tempo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aparelho.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExercicioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExercicioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExercicioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
